//vanilla xp orbs arent summonable with /summon so i made this that is summonable and transforms to an xp orb
//mdifying the vanilla xp orb would make the addon incompatible with other addons that modify xp orbs
{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "billey:summon_xp_orb",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false
        },
        "components": { "minecraft:is_hidden_when_invisible": {},
            "minecraft:transformation": {
                "into": "minecraft:xp_orb"
            }
        }
    }
}