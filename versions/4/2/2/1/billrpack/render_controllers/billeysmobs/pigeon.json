{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.billpigeon": {
      "arrays": {
        "textures": {
          "Array.skins": [
            "Texture.default",
            "Texture.mixed",
            "Texture.gray",
            "Texture.blend",
            "Texture.black"
          ],
          "Array.changer": [
            "Texture.default",
            "Texture.mixed",
            "Texture.gray",
            "Texture.blend",
            "Texture.black",
            "Texture.white",
            "Texture.mixedw",
            "Texture.grayw",
            "Texture.blendw",
            "Texture.blackw"
          ],
          "Array.sheared": [
            "Texture.white",
            "Texture.mixedw",
            "Texture.grayw",
            "Texture.blendw",
            "Texture.blackw"
          ]
        }
      },
      "is_hurt_color": {
          "r": "!query.is_illager_captain",
          "g": "0",
          "b": "0",
          "a": "0.5 + query.is_illager_captain / 3"
      },
      "geometry": "Geometry.default",
      "materials": [ { "*": "Material.default" } ],
      "textures": [ "(query.get_name == 'Perry' || query.get_name == 'Peri' || query.get_name == 'Πέρι') ? (Array.changer[query.life_time * 1.5 + query.variant + query.is_sheared * 5]) : (query.is_sheared ? Array.sheared[query.variant] : Array.skins[query.variant])" ],
      "overlay_color": {
          "r": "math.sin(query.life_time * 200 + query.variant * 600)",
          "g": "math.sin(query.life_time * 200 + query.variant * 600 + 120)",
          "b": "math.sin(query.life_time * 200 + query.variant * 600 + 240)",
          "a": "query.is_illager_captain ? 0.4 : 0.0"
      }
    }
  }
}
