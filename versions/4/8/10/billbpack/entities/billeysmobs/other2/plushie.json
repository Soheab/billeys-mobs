{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "billey:plushie",
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "billey:is_enchanted": {
                    "type": "bool",
                    "default": false,
                    "client_sync": true
                }
            }
        },
        "component_groups": {
            "slime_wyvern": {
                "minecraft:variant": {
                    "value": 0
                }
            },
            "undamaged": {
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "cause": "entity_attack",
                            "deals_damage": false,
                            "on_damage": {
                                "event": "damage"
                            }
                        },
                        {
                            "cause": "all",
                            "deals_damage": false
                        }
                    ]
                }
            },
            "damaged": {
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "cause": "entity_attack",
                            "deals_damage": false,
                            "on_damage": {
                                "event": "destroy"
                            }
                        },
                        {
                            "cause": "all",
                            "deals_damage": false
                        }
                    ]
                },
                "minecraft:timer": {
                    "time": 1,
                    "looping": true,
                    "time_down_event": {
                        "event": "remove_damage",
                        "target": "self"
                    }
                }
            }
        },
        "components": {
            "minecraft:environment_sensor": {
                "triggers": {
                    "event": "despawn",
                    "target": "self",
                    "filters": {
                        "test": "is_riding",
                        "subject": "self",
                        "value": false
                    }
                }
            },
            "minecraft:collision_box": {
                "width": 0.0,
                "height": 0.0
            },
            "minecraft:custom_hit_test": {
                "hitboxes": [
                    {
                        "width": 0.8,
                        "height": 0.5,
                        "pivot": [
                            0,
                            0.25,
                            0
                        ]
                    }
                ]
            },
            "minecraft:knockback_resistance": {
                "value": 1,
                "max": 1
            },
            "minecraft:interact": {
                "interactions": [
                    {
                        "interact_text": "action.interact.squish",
                        "swing": true,
                        "on_interact": {
                            "event": "on_squish",
                            "target": "self",
                            "filters": {
                                "subject": "other",
                                "test": "is_sneaking",
                                "value": false
                            }
                        }
                    },
                    {
                        "interact_text": "action.interact.pet",
                        "on_interact": {
                            "event": "on_pet",
                            "target": "self",
                            "filters": {
                                "subject": "other",
                                "test": "is_sneaking",
                                "value": true
                            }
                        }
                    }
                ]
            },
            "minecraft:persistent": {},
            "minecraft:physics": {
                "has_collision": true,
                "push_towards_closest_space": false,
                "has_gravity": true
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:type_family": {
                "family": [
                    "plushie",
                    "inanimate"
                ]
            },
            "minecraft:nameable": {}
        },
        "events": {
            "slime_wyvern": {
                "add": {
                    "component_groups": [
                        "undamaged",
                        "slime_wyvern"
                    ]
                }
            },
            "damage": {
                "sequence": [
                    {
                        "remove": {
                            "component_groups": [
                                "undamaged"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "damaged"
                            ]
                        }
                    },
                    {
                        "trigger": "play_squish_animation"
                    }
                ]
            },
            "destroy": {
                "queue_command": {
                    "command": [
                        "scriptevent billey:plushie_destroyed"
                    ]
                }
            },
            "remove_damage": {
                "remove": {
                    "component_groups": [
                        "damaged"
                    ]
                },
                "add": {
                    "component_groups": [
                        "undamaged"
                    ]
                }
            },
            "on_squish": {
                "sequence": [
                    {
                        "trigger": "play_squish_animation"
                    },
                    {
                        "queue_command": {
                            "target": "other",
                            "command": "scriptevent billey:set_plushie_squeezer"
                        }
                    },
                    {
                        "queue_command": {
                            "command": "scriptevent billey:plushie_say_owner"
                        }
                    }
                ]
            },
            "play_squish_animation": {
                "queue_command": {
                    "command": [
                        "playanimation @s animation.billplushie.slime_wyvern.squish",
                        "playsound billey.terraphin.say @a ~~~ 1.0 1.6"
                    ]
                }
            },
            "on_pet": {
                "queue_command": {
                    "target": "other",
                    "command": "playanimation @s animation.billeyplayer.pet"
                }
            }
        }
    }
}