            "transform": {
                "queue_command": {
                    "command": [
                        "scriptevent billey:rat_minion_transform"
                    ]
                }
            },
            "from_potion": {
                "add": {
                    "component_groups": [
                        "will_transform"
                    ]
                }
            },
            "from_crowned_rat": {
