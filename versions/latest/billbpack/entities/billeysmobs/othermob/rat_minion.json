            },
            "minecraft:breathable": {
                "total_supply": 15,
                "suffocate_time": 0
            },
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 0.33
            },
            "minecraft:nameable": {},
            "minecraft:health": {
                "value": 10,
                "max": 10
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "operator": "==",
                            "value": true
                        },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:movement": {
                "value": 0.2
            },
            "minecraft:leashable": {
                "soft_distance": 4.0,
                "hard_distance": 6.0,
                "max_distance": 10.0
            },
            "minecraft:balloonable": {
                "mass": 0.5
            },
            "minecraft:navigation.walk": {
                "can_path_over_water": true,
                "avoid_damage_blocks": true
            },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:can_climb": {},
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:attack": {
                "damage": 6
            },
            "minecraft:behavior.melee_attack": {
                "require_complete_path": true,
                "priority": 3,
                "speed_multiplier": 1.75,
                "track_target": true,
                "on_attack": {
                    "target": "self",
                    "event": "rob_mob"
                }
            },
            "minecraft:behavior.random_stroll": {
                "priority": 6,
