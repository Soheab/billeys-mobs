{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "billey:rat_minion",
            "is_spawnable": false,
            "is_summonable": true
        },
        "component_groups": {
            "will_transform": {
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "on_damage": {
                                "filters": {
                                    "any_of": [
                                        {
                                            "test": "has_damage",
                                            "value": "fatal"
                                        },
                                        {
                                            "test": "has_damage",
                                            "value": "void"
                                        }
                                    ]
                                },
                                "event": "transform",
                                "target": "self"
                            },
                            "deals_damage": false
                        }
                    ]
                },
                "minecraft:timer": {
                    "time": [
                        12,
                        18
                    ],
                    "looping": true,
                    "time_down_event": {
                        "event": "transform",
                        "target": "self"
                    }
                },
                "minecraft:behavior.panic": {
                    "force": true,
                    "priority": 1,
                    "speed_multiplier": 1.5
                },
                "minecraft:behavior.avoid_mob_type": {
                    "max_dist": 0,
                    "max_flee": 10,
                    "walk_speed_multiplier": 1.5,
                    "sprint_speed_multiplier": 1.5,
                    "entity_types": {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "operator": "not",
                            "value": "rat_minion"
                        }
                    }
                }
            },
            "from_crowned_rat": {
                "minecraft:tameable": {},
                "minecraft:is_tamed": {},
                "minecraft:timer": {
                    "time": [
                        60,
                        64
                    ],
                    "looping": true,
                    "time_down_event": {
                        "event": "start_despawn",
                        "target": "self"
                    }
                },
                "minecraft:on_target_escape": {
                    "event": "start_despawn",
                    "target": "self"
                },
                "minecraft:behavior.hurt_by_target": {
                    "priority": 2
                },
                "minecraft:behavior.owner_hurt_target": {
                    "priority": 3
                },
                "minecraft:behavior.owner_hurt_by_target": {
                    "priority": 3
                },
                "minecraft:behavior.follow_owner": {
                    "priority": 4,
                    "speed_multiplier": 1.5,
                    "start_distance": 7,
                    "stop_distance": 5
                }
            },
            "despawn": {
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:type_family": {
                "family": [
                    "rat",
                    "mob",
                    "rat_minion"
